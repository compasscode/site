{
  "dependencies": {
    "camo": "^0.12.3",
    "chalk": "^2.0.1",
    "express": "^4.15.3",
    "json5": "^0.5.1",
    "marko": "^4.4.19",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "cssnano": "^3.10.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0"
  },
  "scripts": {
    "start": "nodemon server/index.js -q -i *.marko.js -i *.db -e js,marko,json",
    "clean": "rm -rf assets/",
    "build": "npm run clean && mkdir -p assets/ && npm run build:css",
    "watch": "concurrently --names \"css\" \"npm run watch:css\"",
    "build:css": "postcss css/index.css -o assets/index.css",
    "watch:css": "postcss css/index.css -o assets/index.css -w"
  }
}
